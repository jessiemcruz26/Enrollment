@model WebEnrollment.Models.Course
@section scripts{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>

    <script>

        $(function () {
            $("#datepicker").datepicker();
        });

        $('#btn_Submit').click(function () {

            $('#studentPartialViewContainer').css("display", "block");

            $.ajax({
                type: "GET",
                url: "/Course/Edit",
                data: { instructorId: $('#txtCourseNumber').val() },
                success: function (data) {
                    $("#CourseID").val(data.row.CourseID);
                    $("#CourseName").val(data.row.CourseName);
                    $("#CourseDescription").val(data.row.CourseDescription);
                }
            });
        });
    </script>
}

<h2>Instructor Edit</h2>

<div class="jumbotron">
    <div class="form-group row">
        <label for="staticStudentNumber" class="col-sm-2 col-form-label">Enter course number : </label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" id="txtInstructorNumber" name="InstructorNumber">
        </div>
    </div>
    <span class="col-right">
        <input id="btn_Submit" name="" value="Submit" class="buttonUpdate" type="submit" />
    </span>
</div>

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseProfile" aria-expanded="false" aria-controls="collapseProfile">
    Instructor Id
</button>
</p>
<div class="jumbotron" id="collapseProfile">
    <div class="card card-body">
        @using (Html.BeginForm("Edit", "Course", FormMethod.Post, new { autocomplete = "off" }))
        {
            <input type="hidden" id="InstructorID" name="InstructorID" value="@Model.CourseID">
            <div class="form-group row">
                <label for="staticCourseName" class="col-sm-2 col-form-label">Course Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="CourseName" name="CourseName" value="@Model.CourseName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticCourseDescription" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="CourseDescription" name="CourseDescription" value="@Model.CourseDescription">
                </div>
            </div>
            <span class="col-right">
                <input name="" value="Save" class="buttonUpdate" type="submit" />
            </span>
        }
    </div>
</div>
