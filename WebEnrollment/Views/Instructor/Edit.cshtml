@model WebEnrollment.Models.Instructor
@section scripts{

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <link href="~/Content/student.css" rel="stylesheet" />
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });

        $("#BtnSearch").click(function () {
            if ($('#txtInstructorNumber').val().trim() != "") {
                $("#InstructorSearchForm").submit();
            }
        });

        $("#BtnSaveInstructor").click(function () {
            if (IsFormValid()) {
                $("#InstructorForm").submit();
            }
        });

        function IsFormValid() {
            $('#Error').empty();

            if ($('#InstructorNumber').val().trim() == "") {
                $('#InstructorNumber').addClass('errorClass');
                $('#Error').append("Error: Instructor Number should have a value <br/>");
            }
            else {
                $('#InstructorNumber').removeClass('errorClass');
            }

            if ($('#FirstName').val().trim() == "") {
                $('#FirstName').addClass('errorClass');
                $('#Error').append("Error: First name is required <br/> ");
            }
            else {
                $('#FirstName').removeClass('errorClass');
            }

            if ($('#LastName').val().trim() == "") {
                $('#LastName').addClass('errorClass');
                $('#Error').append("Error: Last name is required <br/>");
            }
            else {
                $('#LastName').removeClass('errorClass');
            }

            if ($('#Error').text() != "")
                return false;

            return true;
        }
    </script>
}

<h2>Instructor Edit</h2>

@using (Html.BeginForm("Search", "Instructor", FormMethod.Post, new { autocomplete = "off", id = "InstructorSearchForm" }))
{
    <div class="jumbotron">
        @if (!Model.IsInstructorFound)
        {
            <label id="Error" class="error">Error : Instructor Number Not Found</label>
            <br />
        }
        <div class="form-group row">
            <label for="staticStudentNumber" class="col-sm-2 col-form-label">Instructor Number : </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtInstructorNumber" name="InstructorNumberSearch" value="@Model.InstructorNumberSearch">
            </div>
        </div>
        <span class="col-right">
            <input id="BtnSearch" name="" value="Search" class="buttonUpdate btn btn-primary" type="button" />
        </span>
    </div>
}
@using (Html.BeginForm("Edit", "Instructor", FormMethod.Post, new { autocomplete = "off", id = "InstructorForm" }))
{
    <div class="jumbotron" id="collapseProfile">
        <div class="card card-body">
            <label id="Error"></label>
            @if (Model.ValidationErrors.Any())
            {
                <label for="" class="col-sm-4 col-form-label error-message">Page not saved</label>
                <br />
                foreach (var item in Model.ValidationErrors)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <label for="" class="col-sm-6 col-form-label error-message">@item.Code : @item.Message</label>
                        </div>
                    </div>
                }
                <br />
            }
            <input type="hidden" id="InstructorID" name="InstructorID" value="@Model.InstructorID">
            <div class="form-group row">
                <label for="staticStudentNumber" class="col-sm-2 col-form-label">Instructor Number</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control" id="InstructorNumber" name="InstructorNumber" value="@Model.InstructorNumber">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticFirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticLastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticMobile" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Mobile" name="Mobile" value="@Model.Mobile">
                </div>
            </div>
            <span class="col-right">
                <input id="BtnSaveInstructor" value="Save" class="buttonUpdate btn btn-primary" type="button" />
            </span>
        </div>
    </div>
}


