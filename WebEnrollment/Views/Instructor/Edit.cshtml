@model WebEnrollment.Models.Instructor
@section scripts{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>

    <script>

        $(function () {
            $("#datepicker").datepicker();
        });

        $('#btn_Submit').click(function () {

            $('#studentPartialViewContainer').css("display", "block");

            $.ajax({
                type: "GET",
                url: "/Instructor/Edit",
                data: { instructorId: $('#txtInstructorNumber').val() },
                success: function (data) {
                    $("#InstructorID").val(data.row.InstructorID);
                    $("#FirstName").val(data.row.FirstName);
                    $("#LastName").val(data.row.LastName);
                    $("#Email").val(data.row.Email);
                    $("#Mobile").val(data.row.Mobile);
                }
            });
        });
    </script>
}

<h2>Instructor Edit</h2>

<div class="jumbotron">
    <div class="form-group row">
        <label for="staticStudentNumber" class="col-sm-2 col-form-label">Enter instructor number : </label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" id="txtInstructorNumber" name="InstructorNumber">
        </div>
    </div>
    <span class="col-right">
        <input id="btn_Submit" name="" value="Submit" class="buttonUpdate" type="submit" />
    </span>
</div>

<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseProfile" aria-expanded="false" aria-controls="collapseProfile">
    Instructor Id
</button>
</p>
<div class="jumbotron" id="collapseProfile">
    <div class="card card-body">
        @using (Html.BeginForm("Edit", "Instructor", FormMethod.Post, new { autocomplete = "off" }))
        {
            <input type="hidden" id="InstructorID" name="InstructorID" value="@Model.InstructorID">
            <div class="form-group row">
                <label for="staticFirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="FirstName" name="FirstName" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticLastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="LastName" name="LastName" value="@Model.LastName">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="Email" name="Email" value="@Model.Email">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticMobile" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="Mobile" name="Mobile" value="@Model.Mobile">
                </div>
            </div>
            <span class="col-right">
                <input name="" value="Save" class="buttonUpdate" type="submit" />
            </span>

        }
    </div>
</div>
