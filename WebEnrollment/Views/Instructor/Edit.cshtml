@model WebEnrollment.Models.Instructor
@section scripts{

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <link href="~/Content/student.css" rel="stylesheet" />
    <script>

        $(function () {
            $("#datepicker").datepicker();
        });

    </script>
}

<h2>Instructor Edit</h2>

@using (Html.BeginForm("Edit", "Instructor", FormMethod.Post, new { autocomplete = "off" }))
{
    <div class="jumbotron">
        <div class="form-group row">
            <label for="staticStudentNumber" class="col-sm-2 col-form-label">Instructor Number : </label>
            <div class="col-sm-10">
                <input type="text" class="form-control-plaintext" id="txtInstructorNumber" name="InstructorNumberSearch" value="@Model.InstructorNumberSearch">
            </div>
        </div>
        <span class="col-right">
            <input id="btn_Submit" name="" value="Submit" class="buttonUpdate btn btn-primary" type="submit" />
        </span>
    </div>

    <div class="jumbotron" id="collapseProfile">
        <div class="card card-body">

            <input type="hidden" id="InstructorID" name="InstructorID" value="@Model.InstructorID">
            <div class="form-group row">
                <label for="staticStudentNumber" class="col-sm-2 col-form-label">Instructor Number</label>
                <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="InstructorNumber" name="InstructorNumber" value="@Model.InstructorNumber">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticFirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="FirstName" name="FirstName" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticLastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="LastName" name="LastName" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="Email" name="Email" value="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticMobile" class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="Mobile" name="Mobile" value="@Model.Mobile">
                </div>
            </div>
            <span class="col-right">
                <input name="" value="Save" class="buttonUpdate btn btn-primary" type="submit" />
            </span>
        </div>
    </div>
}


