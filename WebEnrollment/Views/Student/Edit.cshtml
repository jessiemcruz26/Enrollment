@model WebEnrollment.Models.Student
@section scripts{
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>

        $(function () {
            $("#datepicker").datepicker();
        });

        $('#btn_Submit').click(function () {

            $("#myPartialViewContainer").load('@Url.Action("Edit", "Student")' + '?studentNumber=' + $('#staticStudentNumber').val())
            $('#myPartialViewContainer').css("visibility", "visible");

        });
    </script>
}
<h2>Student Edit</h2>
<div class="jumbotron">
    <input type="hidden" id="StudentNumber" name="showAll" />
    <div class="form-group row">
        <label for="staticStudentNumber" class="col-sm-2 col-form-label">Enter student number: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" id="staticStudentNumber" name="StudentNumber">
        </div>
    </div>
    <span class="col-right">
        <input id="btn_Submit" name="" value="Submit" class="buttonUpdate" type="submit" />
    </span>
</div>
<br />
<div id="myPartialViewContainer" style="visibility: hidden" class="jumbotron">
    @Html.Partial("_StudentPartialView")
</div>

